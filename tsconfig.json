{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "lib": ["dom", "esnext"],
    "module": "CommonJS",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
